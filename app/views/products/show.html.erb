
<% content_for :body_class, 'bg-light' %>
<h1>show product</h1>
  <section class="section instrument-show">
    <div class="columns">
      <div class="column is-8">
        <h1 class="title is-2"><%= @product.name %></h1>

        <ul class="pv1">

          <li class="inline-block pr3"><%= @product.brand %></li>
          <li class="inline-block pr3"><%= @product.size %></li>
          <li class="inline-block pr3"><%= @product.sku %></li>


          <% if @product.stock? %>
          <li class="inline-block pr3"><%= @product.stock %></li>
          <% end %>
          
        </ul>
        
        <div class="feature-image">
          <%= image_tag(@product.image) %>
        </div>

      </div>
      <div class="column is-3 is-offset-1">
        <div class="bg-white pa4 border-radius-3">
          <h4 class="title is-5 has-text-centered"><%= @product.price %></h4>
          <%= link_to 'Add to cart', line_items_path(product_id: @product), class: 'button is-warning add-to-cart' %>
        </div>
      </div>
    </div>

    <%# if instrument_author(@instrument) %>
      <%#= link_to 'Edit', edit_instrument_path(@instrument), class: 'button' %>
    <%# end %>
  </section>
